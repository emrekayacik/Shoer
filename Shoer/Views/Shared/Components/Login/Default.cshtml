@using Microsoft.AspNetCore.Http
<ul class="navbar-nav my-2 my-lg-0">
    
 
    @if (Context.Session.GetString("UserName") != null || Context.Session.GetString("Admin") != null)
    {
        <li class="nav-item active">
            <a class="nav-link" href="/Customer">@Context.Session.GetString("UserName")</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="/Customer/Logout">Logout</a>
        </li>  
    }
    else
    {
        <li class="nav-item active">
            <a class="nav-link" href="/Customer/Login">Login<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="/Customer/Register">Register<span class="sr-only">(current)</span></a>
        </li>
    }

    

</ul>