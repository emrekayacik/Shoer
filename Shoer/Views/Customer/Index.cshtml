@model List<Shoer.Entity.Order.Order>
@{
    ViewData["Title"] = "Orders";
}
<div class="container pb-3" style="margin-top: 100px;">
    <div class="row">
        <div class="col-md-12">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"].ToString()
                </div>
            }

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Order Date</th>
                        <th>Order Status</th>
                        <th>Total Payment</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count <= 0)
                    {
                        <tr>
                            <td colspan="4">There is no Order that you have been given. Go to your cart to give one.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.OrderDate
                                </td>
                                <td>
                                    @item.OrderStatus
                                </td>
                                <td>
                                    @item.TotalPayment
                                </td>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>