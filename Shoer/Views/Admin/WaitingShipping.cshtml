@model List<Shoer.Entity.Order.Order>

@{
    Layout = "_AdminLayout";
}
<div class="container pb-5" style="margin-top: 150px;">
    @if (TempData["Success"] != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-success text-center" style="font-weight: bold">
                    @TempData["Success"].ToString()
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Order Status</th>
                    <th>Order Date</th>
                    <th>Total Payment</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @if (Model.Count <= 0)
                {
                    <tr>
                        <td colspan="4">There is no Order Approved.</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.OrderStatus
                            </td>
                            <td>
                                @item.OrderDate
                            </td>
                            <td>
                                @item.TotalPayment
                            </td>
                            <td>
                                <a class="btn btn-success" href="/Admin/ShipOrder/@item.Id">Shipped</a>
                            </td>
                        </tr>
                    }

                }
                </tbody>
            </table>
        </div>
    </div>
</div>