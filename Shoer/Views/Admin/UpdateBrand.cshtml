@model Shoer.Entity.Brand.Brand

@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container pb-5" style="margin-top: 150px;">
    <h1>Update Brand</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="UpdateBrand">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="BrandName" class="control-label"></label>
                    <input asp-for="BrandName" class="form-control" />
                    <span asp-validation-for="BrandName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


</div>